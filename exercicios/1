package pkg;

import java.util.Scanner;

class PrimeiroProjeto {

	public static void main(String[] args) {
//		final double raio = 3.141516;
//		System.out.println("o double: "+ raio);
		
		String nome; // é o que eu vou ler
		Scanner teclado = new Scanner(System.in);
		System.out.println("Digite o nome");
		nome = teclado.nextLine();
		System.out.println("O nome digitado: "+nome);
		
		//ler int
		int n;
		System.out.println("Digite um inteiro: ");	
		n = teclado.nextInt();
		System.out.println("Foi digitado: "+n);
		
		
		//ler float
		double d;
		System.out.println("Digite um double: ");
		d = teclado.nextDouble();
		System.out.println("Double: "+d);
		
		//if
		int idade;
		System.out.println("Digite uma idade: ");
		idade = teclado.nextInt();
		System.out.println("Idade digitada: "+idade);
		
		if(idade >= 18) {
			System.out.println("Maior de idade");
		} else { System.out.println("Menor de idade");
	      }
		
		//switch
		int opcao;
		System.out.println("Digite uma opcao: ");
		System.out.println("Digite 1 para cadastrar");
		System.out.println("Digite 2 para consultar");
		System.out.println("Digite 3 para sair");
		opcao = teclado.nextInt();
		switch(opcao) {
		case 1: 
			System.out.println("Aqui vou cadastrar...");
			break;
		case 2: 
			System.out.println("Aqui vou consultar...");
			break;
		case 3: 
			System.out.println("Aqui vou sair...");
			break;
		default:
			System.out.println("Digite uma operação válida");
			break;
		}
}
}
